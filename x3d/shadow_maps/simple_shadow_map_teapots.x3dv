] [ "../useful_prototypes.x3dv#EditableTransform" ]

# spot test ------------------------------------------------------------------

EditableTransform {
  description "spot shadow receiver"
  children [
    DEF MySpot SpotLight {
      location 0 0 10
      direction 0 0 -1
      projectionNear 1
      projectionFar 20
    }
    Shape {
      appearance Appearance { material Material { } receiveShadows USE MySpot }
      geometry TesselatedPlane { }
    }
  ]
}

EditableTransform {
  description "spot shadow complicated receiver"
  translation -20 0 0
  children [
    DEF MySpot2 SpotLight {
      location 0 0 10
      direction 0 0  -1
      projectionNear 1
      projectionFar 20
    }

    Shape {
      appearance Appearance { material Material { } receiveShadows USE MySpot2 }
      geometry ShadowMapReceiver { }
    }
  ]
}

# directional test -----------------------------------------------------------

EditableTransform {
  translation 20 0 0
  description "directional shadow receiver"
  children [
    DEF MyDir DirectionalLight {
      direction 0 0 -1
      projectionLocation 0 0 10
      projectionRectangle -4 4 -4 4
      projectionNear 1
      projectionFar 20
    }

    Shape {
      appearance Appearance { material Material { } receiveShadows USE MyDir }
      geometry TesselatedPlane { }
    }
  ]
}

# Cube to visualize shadow map -----------------------------------------------

Transform {
  translation 0 8 0
  children Shape {
    appearance Appearance {
      material Material { }
      texture GeneratedShadowMap {
        light USE MySpot update "ALWAYS" size 512 compareMode "NONE"
      }
    }
    geometry Box { size 6 6 6 }
  }
}

