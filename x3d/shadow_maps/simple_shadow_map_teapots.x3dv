  inputOutput SFNode texCoord
] [ "simple_shadow_map_receiver.wrl#ShadowMapReceiver" ]

EXTERNPROTO EditableTransform [
  inputOutput MFNode children
  inputOutput SFVec3f translation
  inputOutput SFVec3f scale
