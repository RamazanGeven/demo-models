#VRML V2.0 utf8

# Test of KambiTriangulation node.
#
# Shows five rows of shapes.
# First (upper) row = quadric-slices, quadric-stacks and rect-divisions at default
# values (e.g. set by appropriate parameters in my view3dscene and rayhunter).
# Next three rows = some parameters set to very high values,
# next three rows = some parameters set to very low values.
#
# Bets viewed in 'wireframe' mode.

# Additional test: does view3dscene can handle wrong values ?
#KambiTriangulation { rectDivisions -299 }
#KambiTriangulation { quadricSlices -3 }
#KambiTriangulation { quadricSlices 1 }

DEF Row Group {
  children [
    Shape {
      appearance DEF App Appearance { material Material { } }
      geometry Sphere { }
    }
    Transform {
      translation 2 0 0
      children [
        Shape { appearance USE App geometry Cone { } }
        Transform {
          translation 2 0 0
          children [
            Shape { appearance USE App geometry Cylinder { } }
            Transform {
              translation 2 0 0
              children [
                Shape { appearance USE App geometry Box { } }
              ] } ] } ] } ] }

Transform {
  translation 0 -2.5 0
  children [
    KambiTriangulation { quadricSlices 100 }
    USE Row
    Transform {
      translation 0 -2.5 0
      children [
        KambiTriangulation { quadricStacks 100 }
        USE Row
        Transform {
          translation 0 -2.5 0
          children [
            KambiTriangulation { rectDivisions 100 }
            USE Row
            Transform {
              translation 0 -2.5 0
              children [
                KambiTriangulation { quadricSlices 3 }
                USE Row
                Transform {
                  translation 0 -2.5 0
                  children [
                    KambiTriangulation { quadricStacks 3 }
                    USE Row
                    Transform {
                      translation 0 -2.5 0
                      children [
                        KambiTriangulation { rectDivisions 0 }
                        USE Row
                      ] } ] } ] } ] } ] } ] }
