#VRML V2.0 utf8

# This demonstrates volumetric fog, showing also example
# where separate-shapes-no-transform optimization
# fails (volumetric fog is rendered bad --- it should be rendered
# differently on each tree, but it's the same).
#
# Try these 2 commands:
#
#   view3dscene break_no_transform_final.wrl \
#     --renderer-optimization separate-shapes-no-transform
#
#   view3dscene break_no_transform_final.wrl \
#     --renderer-optimization separate-shapes
#
# and compare results, you'll see what I mean.

# Camera settings "encoded" in the VRML declaration below :
# direction 0.010892866179347 0.199703142046928 2.06223358389934E-008
# up -0.000000150294156 -0.000000138843475 1
# gravityUp 0 0 1
Transform {
  translation -2.443910360336304 -16.5615234375 5.299179553985596
  rotation 1 0 0 1.570796370506287
  children Viewpoint {
    position 0 0 0 # camera position is expressed by translation
    orientation 0.001646678196266 -0.999972343444824 0.006119415163994 0.054492648690939
  }
}

NavigationInfo {
  type ["ANY", "FLY"]
  avatarSize [ 0.5, 2 ]
  speed 10
  headlight TRUE
}

Fog {
  color 0.2 0.2 1
  fogType "LINEAR"
  volumetric TRUE
  volumetricDirection 0 0 1
  volumetricVisibilityStart -0
  visibilityRange 10
}

Transform {
  rotation 1 0 0 1.57
  children Inline { url "break_no_transform.wrl" }
}
