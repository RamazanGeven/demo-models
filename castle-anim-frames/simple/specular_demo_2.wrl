#VRML V2.0 utf8

# Copied from ../lights_materials/specular_demo.wrl for castle-anim-frames demo.
# Open specular_demo.kanim, and be sure to turn on
# "Shaders->Enable For Everything" to see nice specular highlights.

NavigationInfo {
  type "FLY"
  headlight FALSE
}

Transform {
  center 0 0 0
  rotation 0 0 1 6.2831853072 # 2*pi
  children Transform {
    translation 10 0 10
    children [
      PointLight { location 0 0 0 }
      # point to indicate light position
      Shape {
        geometry PointSet {
          coord Coordinate { point 0 0 0 }
          color Color { color 1 1 1 }
        }
      }
      # sphere to indicate light radius
#       Shape {
#         appearance Appearance { material Material { transparency 0.5 } }
#         geometry Sphere { radius 100 }
#       }
    ]
  }
}

Viewpoint  {
  position 0 -0.000000000000022 13.229804039001465
  orientation 0 0 1 0
  # alternative representation of "orientation" :
  # direction 0 0 -0.024000000208616
  # up 0 1 4.37113918394516E-008
}

Transform {
  translation 0 0 0
  children DEF Row Group {
    children [
      Transform {
        translation 0 0 0
        children Shape {
          appearance DEF App Appearance {
            material Material {
              ambientIntensity 0
              diffuseColor 0 0 1
              specularColor 1 1 1
            } }
          geometry Sphere { }
        } }
      Transform {
        translation -3 0 0
        children Shape {
          appearance USE App
          geometry Sphere { }
        } }
      Transform {
        translation +3 0 0
        children Shape {
          appearance USE App
          geometry Sphere { }
        } }
    ]
  }
}

Transform {
  translation 0 -3 0
  children USE Row
}

Transform {
  translation 0 +3 0
  children USE Row
}
