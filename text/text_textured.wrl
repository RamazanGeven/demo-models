#VRML V2.0 utf8

# Demonstrates textured text.

Group {
  children [
    Shape {
      appearance Appearance {
        material Material { }
        texture ImageTexture { url "../textures/bricks2.jpg" }
      }
      geometry Text {
        fontStyle DEF FS FontStyle { style "BOLD" size 10 }
        string ["just a few", "lines", "of textured text"]
      }
    }

    Transform {
      translation 0 -30 0
      children Transform {
        rotation 1 0 0 0.7
        children Shape {
          appearance Appearance {
            material Material { }
            texture ImageTexture { url "../textures/test_texture.png" }
          }
          geometry Text {
            fontStyle USE FS
            string ["and a few more", "lines", "of textured text"]
          }
        }
      }
    }
  ]
}
